<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Frisbee.MainPage">
   <StackLayout BackgroundColor="#f5f5f5">

        <BoxView BackgroundColor="#f5f5f5"/>

        <Grid>

          <Grid.RowDefinitions>
          </Grid.RowDefinitions>

          <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="2*" />
          <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
      

           <Label Text="Frisbee" HorizontalOptions="Center"></Label>

           <Label
                x:Name= "HelloMessage"
                Text="Hello There"
                FontSize="30"
                FontFamily="HelveticaNeue"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
            >

           </Label>

           <ImageButton
                Source="galleryButtonicon.png"
                x:Name="GalleryButton"
                Clicked="GalleryButtonClicked"
                WidthRequest="20"
                HeightRequest="20"
                Grid.Row="16"
                Grid.Column="0">
           </ImageButton>

           <ImageButton
                Source="CameraButtonIcon.png"
                x:Name="CameraButton"
                Clicked="CameraButtonClicked"
                WidthRequest="20"
                HeightRequest="20"
                Grid.Row="16"
                Grid.Column="1">
           </ImageButton>

           <ImageButton
                Source="ShareButtonIcon.png"
                x:Name="ShareButton"
                Clicked="ShareButtonClicked"
                WidthRequest="20"
                HeightRequest="20"
                Grid.Row="16"
                Grid.Column="2">
           </ImageButton>

        </Grid>
   </StackLayout>  
</ContentPage>